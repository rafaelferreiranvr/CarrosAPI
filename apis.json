{
  "openapi": "3.0.0",
  "info": {
    "title": "Cars API",
    "description": "API para gerenciamento de carros e suas fotos",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:3000",
      "description": "Servidor de desenvolvimento"
    }
  ],
  "components": {
    "securitySchemes": {
      "TokenAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "Token"
      }
    },
    "schemas": {
      "Car": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "model": {
            "type": "string"
          },
          "brand": {
            "type": "string"
          },
          "status": {
            "type": "integer",
            "enum": [0, 1],
            "description": "0 - INDISPONIVEL, 1 - DISPONIVEL"
          }
        },
        "required": ["model", "brand", "status"]
      },
      "Photo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "car": {
            "type": "integer",
            "description": "ID do carro associado"
          },
          "image": {
            "type": "string",
            "format": "binary"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["car", "image"]
      },
      "User": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        },
        "required": ["username", "email", "password"]
      }
    }
  },
  "paths": {
    "/auth/signup/": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Registrar novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso"
          },
          "400": {
            "description": "Dados inválidos"
          }
        }
      }
    },
    "/auth/login/": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Autenticar usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem-sucedido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Credenciais inválidas"
          }
        }
      }
    },
    "/api/car/": {
      "get": {
        "tags": ["Carros"],
        "summary": "Listar todos os carros",
        "security": [{"TokenAuth": []}],
        "responses": {
          "200": {
            "description": "Lista de carros",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Car"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Carros"],
        "summary": "Criar novo carro",
        "security": [{"TokenAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Car"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Carro criado com sucesso"
          },
          "400": {
            "description": "Dados inválidos"
          }
        }
      }
    },
    "/api/car/{id}/": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }
      ],
      "get": {
        "tags": ["Carros"],
        "summary": "Obter detalhes do carro",
        "security": [{"TokenAuth": []}],
        "responses": {
          "200": {
            "description": "Detalhes do carro",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Car"
                }
              }
            }
          },
          "404": {
            "description": "Carro não encontrado"
          }
        }
      },
      "put": {
        "tags": ["Carros"],
        "summary": "Atualizar carro",
        "security": [{"TokenAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Car"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Carro atualizado com sucesso"
          },
          "400": {
            "description": "Dados inválidos"
          },
          "404": {
            "description": "Carro não encontrado"
          }
        }
      },
      "delete": {
        "tags": ["Carros"],
        "summary": "Excluir carro",
        "security": [{"TokenAuth": []}],
        "responses": {
          "204": {
            "description": "Carro excluído com sucesso"
          },
          "404": {
            "description": "Carro não encontrado"
          }
        }
      }
    },
    "/api/photo/": {
      "get": {
        "tags": ["Fotos"],
        "summary": "Listar todas as fotos",
        "security": [{"TokenAuth": []}],
        "responses": {
          "200": {
            "description": "Lista de fotos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Photo"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Fotos"],
        "summary": "Enviar nova foto",
        "security": [{"TokenAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/Photo"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Foto enviada com sucesso"
          },
          "400": {
            "description": "Dados inválidos"
          }
        }
      }
    },
    "/api/photo/{id}/": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }
      ],
      "get": {
        "tags": ["Fotos"],
        "summary": "Obter detalhes da foto",
        "security": [{"TokenAuth": []}],
        "responses": {
          "200": {
            "description": "Detalhes da foto",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Photo"
                }
              }
            }
          },
          "404": {
            "description": "Foto não encontrada"
          }
        }
      }
    }
  }
}
