{
  "openapi": "3.0.0",
  "info": {
    "title": "Carros API",
    "description": "API para gerenciamento de carros e suas fotos",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor de desenvolvimento"
    }
  ],
  "components": {
    "securitySchemes": {
      "TokenAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "description": "Token <seu-token>"
      }
    },
    "schemas": {
      "Car": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "Name": {
            "type": "string"
          },
          "Status": {
            "type": "string",
            "enum": ["DISPONIVEL", "INDISPONIVEL"],
            "description": "Status do carro"
          },
          "Base64": {
            "type": "string",
            "description": "Imagem em base64 (opcional)"
          }
        },
        "required": ["Name", "Status"]
      },
      "Photo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "Base64": {
            "type": "string",
            "description": "Imagem em base64"
          }
        },
        "required": ["Base64"]
      },
      "User": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        },
        "required": ["username", "email", "password"]
      }
    }
  },
  "paths": {
    "/auth/signup/": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Registrar novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro na validação dos dados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "enum": [
                        "usernameExists",
                        "userEmailExists", 
                        "invalidUsername",
                        "invalidEmail",
                        "invalidPassword",
                        "unknownError"
                      ],
                      "description": "Código do erro. 'usernameExists': nome de usuário já existe, 'userEmailExists': email já cadastrado, 'invalidUsername': nome de usuário contém caracteres inválidos, 'invalidEmail': formato de email inválido, 'invalidPassword': senha não atende aos requisitos"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login/": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Autenticar usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem-sucedido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "enum": ["userNotFound", "invalidPassword"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/car/": {
      "get": {
        "tags": ["Carros"],
        "summary": "Listar todos os carros",
        "security": [{"TokenAuth": []}],
        "responses": {
          "200": {
            "description": "Lista de carros",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Car"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      },
      "post": {
        "tags": ["Carros"],
        "summary": "Criar novo carro",
        "security": [{"TokenAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Car"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Carro criado com sucesso"
          },
          "400": {
            "description": "Dados inválidos"
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      }
    },
    "/api/car/{id}/": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "tags": ["Carros"],
        "summary": "Obter detalhes do carro",
        "security": [{"TokenAuth": []}],
        "responses": {
          "200": {
            "description": "Detalhes do carro",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Car"
                }
              }
            }
          },
          "401": {
            "description": "Não autenticado"
          },
          "404": {
            "description": "Carro não encontrado"
          }
        }
      },
      "put": {
        "tags": ["Carros"],
        "summary": "Atualizar carro",
        "security": [{"TokenAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Car"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Carro atualizado com sucesso"
          },
          "400": {
            "description": "Dados inválidos"
          },
          "401": {
            "description": "Não autenticado"
          },
          "404": {
            "description": "Carro não encontrado"
          }
        }
      },
      "delete": {
        "tags": ["Carros"],
        "summary": "Excluir carro",
        "security": [{"TokenAuth": []}],
        "responses": {
          "200": {
            "description": "Carro excluído com sucesso"
          },
          "401": {
            "description": "Não autenticado"
          },
          "404": {
            "description": "Carro não encontrado"
          }
        }
      }
    },
    "/api/car/search/": {
      "post": {
        "tags": ["Carros"],
        "summary": "Buscar carros",
        "security": [{"TokenAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": {
                    "type": "string",
                    "example": "query Query { searchCars(name: \"Lam\") { id Status Name } }"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resultado da busca",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "searchCars": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Car"
                          }
                        }
                      }
                    }
                  }
                },
                "example": {
                  "data": {
                    "searchCars": [
                      {
                        "id": "27",
                        "Status": "DISPONIVEL",
                        "Name": "Lamborghini"
                      }
                    ]
                  }
                }
              }
            }
          },
          "400": {
            "description": "Query inválida"
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      }
    },
    "/api/photo/": {
      "get": {
        "tags": ["Fotos"],
        "summary": "Listar todas as fotos",
        "security": [{"TokenAuth": []}],
        "responses": {
          "200": {
            "description": "Lista de fotos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Photo"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      },
      "post": {
        "tags": ["Fotos"],
        "summary": "Upload de foto",
        "security": [{"TokenAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Photo"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Foto criada com sucesso"
          },
          "400": {
            "description": "Dados inválidos"
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      }
    },
    "/api/photo/{id}/": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "tags": ["Fotos"],
        "summary": "Obter detalhes da foto",
        "security": [{"TokenAuth": []}],
        "responses": {
          "200": {
            "description": "Detalhes da foto",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Photo"
                }
              }
            }
          },
          "401": {
            "description": "Não autenticado"
          },
          "404": {
            "description": "Foto não encontrada"
          }
        }
      }
    },
    "/api/photo/render/{id}/": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "tags": ["Fotos"],
        "summary": "Renderizar foto",
        "security": [{"TokenAuth": []}],
        "responses": {
          "200": {
            "description": "Imagem",
            "content": {
              "image/*": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "401": {
            "description": "Não autenticado"
          },
          "404": {
            "description": "Foto não encontrada"
          }
        }
      }
    }
  }
}
